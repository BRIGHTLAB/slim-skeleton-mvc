{% extends 'base.twig' %}
{% block title %}Password Reset{% endblock %}

{% block info %}
Please fill the below to reset your password.<br><br>
<form method="post" action="{{ url }}">
    <table border="0">
        <tr><td>New Password</td></tr>
        <tr><td><input type="password" name="new_pass"></td></tr>

        <tr><td>Retype Password</td></tr>
        <tr><td><input type="password" name="retype_new_pass"></td></tr>

        <tr><td>
            <input type="submit" name="submit" value="Submit">
        </td></tr>

        <tr><td><input type="hidden" name="reset_token" value="{{ token }}"></td></tr>
    </table>
</form>
{% endblock %}

